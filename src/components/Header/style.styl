.app-header
	display flex
	
	flex 0 0 auto
	
	height 56px
	
	background-color #204254

	color #efefef
	
	.material-icons
		padding 12px
		
		font-size 32px

.app-title
	flex 1 0 auto
	
	line-height 56px
	
	text-align center

.app-refresh
	color inherit

	cursor pointer
	
	transform-origin 50% 50%

	transition transform 0.2s
	transition-timing-function cubic-bezier(0.333, -0.333, 0.750, 1.750)
	
	&:hover
		transform rotateZ(60deg)