.weather-list-item
	box-sizing border-box

	display flex
	
	align-items center
	
	flex 0 0 auto
	
	padding 0 16px
	
	height 96px

	border-bottom 1px solid #d7d7d7
	
	cursor pointer
	
	-webkit-tap-highlight-color transparent

	&:last-child
		border-bottom none
	
	&:hover
		.weather-content, .weather-temperature
			opacity 1

.weather-content
	flex 1 0 auto
	
	color #1f1f1f

.weather-suburb
	font-size 21px
	font-weight 500

.weather-condition
	padding-top 3px
	
	font-size 18px

.weather-temperature
	font-size 40px
	font-weight 700
	
	line-height 1


.weather-content, .weather-temperature
	opacity 0.5625
	
	transition opacity 0.25s
	